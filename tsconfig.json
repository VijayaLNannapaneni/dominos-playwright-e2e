{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,   
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
     "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@support/*": ["./support/*"],
      "@pageobjects/*": ["./pageobjects/*"],
      "@features/*": ["./features/*"]
    }
  },
  "include": [
    "features/**/*",
    "support/**/*",
    "pageobjects/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
